#include <iostream>
using namespace std;

// calculate the volume of a cube
int volume(int a)
{
    return (a * a * a);
}
// rectangular box
int volume(int l, int b, int h)
{
    return (l * b * h);
}
int sum(int a, int b)
{
    cout << "Using the function with 2 arguements" << endl;
    return a + b;
}
int sum(int a, int b, int c)
{
    cout << "Using the function with 3 arguements" << endl;
    return a + b + c;
}

int main()
{
    cout << "the sum of 2 and 3 is " << sum(2, 3) << endl;
    cout << "the sum of 2 , 3 and 4 " << sum(2, 3, 4) << endl;
    cout << "the volumne of rectangular is founded by" << volume(3, 3, 3) << endl;
    cout << "the volumne of cube of side 3 is equal to" << volume(3) << endl;

    return (0);
}
